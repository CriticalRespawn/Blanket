    <body class="amp-template">
        <div class="sub-menu text-center">
            <span id="blog-title">
                <a href="{{@blog.url}}">{{{@blog.title}}}</a>
            </span>    
         
            {{!-- This pulls in the navigation from the site which can be edited in the 
            "Design" section of the Ghost Admin. Blanket does not alter the structure of the navigation
            so there's no overriden navigation.hbs file in this theme --}}
            {{navigation}}
        </div>
        
        {{#post}}
        <div id="top_content">
            <div class="container text-center">
                <div class="grid">
                    <div class="col-1-2 push-1-4">
                            {{!-- It's possible a post doesn't have a feature image, if not, show a placeholder image instead  --}} 
                            {{#if feature_image}}
                                <amp-img src="{{img_url feature_image}}" class="top-post-image" alt="{{title}}" width="75" height="75" layout="fixed"></amp-img>
                            {{else}}
                                <amp-img src="{{asset "images/no_img.png"}}" class="top-post-image" alt="{{t "Missing Image"}}" width="75" height="75" layout="fixed"></amp-img>
                            {{/if}}  
                        <h1>
                            {{title}}

                            {{!-- If the post is featured, Blanket shows a star next to the title --}}
                            {{#if featured}}
                                <i class="fa fa-star"></i>
                            {{/if}}
                        </h1>
                        <div class="extra_post_info">
                            {{!-- Everything inside the {author} tags pulls the specified data from the author you are viewing --}}
                            {{#author}}
                                <span>
                                    <i class="fa fa-user fa-fw"></i>
                                    <a href="{{url}}">{{name}}</a> 
                                </span> 
                            {{/author}}

                            {{!-- If you are changing this date format, you should also 
                            change it in /partials/post.hbs for consistency --}}
                            <span><i class="fa fa-calendar fa-fw"></i> {{date format='DD MMM YYYY'}}</span>
                        </div>  
                    </div>    
                </div>
            </div>
        </div>

        <div id="post" class="container">
            <div class="grid">
                <div class="col-8-12 push-2-12">
                    {{amp_content}}

                    {{!-- Only load in any tag content, if the post actually has tags --}}
                    {{#if tags}}
                        <div class="tags-list">
                            {{t "Tags:"}} {{tags separator=", "}}
                        </div>
                    {{/if}}
        
                    {{!-- The tag below contains the HTML to allow a post to
                    be shared. You can find it under /partials/sharer.hbs --}}            
                    {{> "sharer"}} 
                </div>
            </div>
        </div>
        {{/post}}

        {{!-- The footer at the very bottom of the screen --}}
        <footer id="footer">
            <div class="container">
                <p id="site-name">{{t "Blanket by"}} <a href="https://jonathanpurvis.co.uk/">Jon</a>.</p>
                <p id="credit">{{t "Powered by"}} <a href="http://ghost.org" target="_blank">Ghost</a></p>
                <p id="social_links" class="text-center">

                    {{!-- If a Facebook link is added to the Ghost Admin, show Facebook icon --}}
                    {{#if @blog.facebook}}
                        <a href="https://www.facebook.com/{{@blog.facebook}}" target="_blank"><i class="fa fa-facebook fa-fw"></i></a>
                    {{/if}} 

                    {{!-- If a Twitter link is added to the Ghost Admin, show Twitter icon --}}
                    {{#if @blog.twitter}}
                        <a href="https://twitter.com/{{@blog.twitter}}" target="_blank"><i class="fa fa-twitter fa-fw"></i></a>
                    {{/if}}
                    <a href="{{@blog.url}}/rss" target="_blank"><i class="fa fa-rss fa-fw"></i></a>

                    {{!-- Adds an envelope icon to the footer ONLY if "Subscribers" is turned on within
                    the Labs section of the Admin --}}
                    {{#if @labs.subscribers}}
                        <a href="{{@blog.url}}/subscribe/"><i class="fa fa-envelope fa-fw"></i></a>
                    {{/if}}
                </p>  
            </div>
        </footer>

    </body>
