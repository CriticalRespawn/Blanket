{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {{{body}}} tag of the default.hbs template --}}

<div id="top_content" class="text-center">
    <div class="container">
        <div class="grid">           
            <h1>Subscribe to {{@blog.title}}</h1>
            <p>Get the latest posts from {{@blog.title}}, delivered straight to your inbox.</p>
        </div>
    </div>
</div>
<div class="container">
    <div class="grid">
        <div class="col-1-2 push-1-4">

            {{!-- If the user has managed to successfully submit the form, show them
            a success message to let them know it has worked --}}
            {{#if success}}
                <p class="main-success">{You have successfully subscribed.</p>
            {{/if}}

            {{!-- This helper pulls in the form to the page. Blanket does not edit the form so this
            is using the core form --}}
            {{subscribe_form}}
        </div>
    </div>
</div>