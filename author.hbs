{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {{{body}}} tag of the default.hbs template --}}

<div id="top_content">
    <div class="container text-center"> 
        <div class="grid">
            <div class="col-1-2 push-1-4">

                {{!-- Everything inside the {author} tags pulls the specified data from the author you are viewing --}}
                {{#author}}

                    {{!-- It's possible an author doesn't have a profile image, if not, show a placeholder image instead  --}} 
                    {{#if profile_image}}
                        <img src="{{img_url profile_image}}" class="top-author-profile-image" alt="{{name}}" />
                    {{else}}
                        <img src="{{asset "images/no_img.png"}}" class="top-author-profile-image" alt="Missing Image" />
                    {{/if}}                 
                    <h1>{{name}}</h1>

                    {{!-- It's also possible they don't have a bio, wrapped the output in {if} blocks to check --}}
                    {{#if bio}}
                        <p>{{bio}}</p>
                    {{/if}}

                    {{!-- This section pulls in extra details about the author. Each span is wrapped in an {if} block
                    as it's entirely possible that the author hasn't filled out any of this --}}
                    <div class="extra_author_info">
                        {{#if location}}
                            <span id="location"><i class="fa fa-map-marker fa-fw"></i> {{location}}</span>
                        {{/if}}
                        {{#if website}}
                            <span><i class="fa fa-globe fa-fw"></i> <a href="{{website}}" target="blank">Website</a></span>
                        {{/if}}  
                        {{#if facebook}}
                            <span><i class="fa fa-facebook fa-fw"></i> <a href="https://www.facebook.com/{{facebook}}" target="blank">Facebook</a></span>
                        {{/if}} 
                        {{#if twitter}}
                            <span><i class="fa fa-twitter fa-fw"></i> <a href="https://twitter.com/{{twitter}}" target="blank">Twitter</a></span>
                        {{/if}}                                                                        
                    </div>
                {{/author}}
            </div>
        </div>
    </div>
</div>

<div class="container">
    
    {{!-- The tag below contains the HTML for the grid of posts. You can find
    it under /partials/post-grid.hbs --}}               
    {{> "post-grid"}}    

</div>