{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {{{body}}} tag of the default.hbs template --}}

{{!-- Everything inside the {post} tags pulls in the specified data for the page you are viewing --}}
{{#post}}
<div id="top_content">
    <div class="container text-center">
        <div class="grid">
            <div class="col-1-2 push-1-4">
                    {{!-- It's possible a post doesn't have a feature image, if not, show a placeholder image instead  --}} 
                    {{#if feature_image}}
                        <img src="{{img_url feature_image}}" class="top-post-image" alt="{{title}}" />
                    {{else}}
                        <img src="{{asset "images/no_img.png"}}" class="top-post-image" alt="Missing Image" />
                    {{/if}}  
                <h1>
                    {{title}}

                    {{!-- If the post is featured, Blanket shows a star next to the title --}}
                    {{#if featured}}
                        <i class="fa fa-star"></i>
                    {{/if}}
                </h1>
                <div class="extra_post_info">
                    {{!-- Everything inside the {author} tags pulls the specified data from the author you are viewing --}}
                    {{#author}}
                        <span>
                            <i class="fa fa-user fa-fw"></i>
                            <a href="{{url}}">{{name}}</a> 
                        </span> 
                    {{/author}}

                    {{!-- If you are changing this date format, you should also 
                    change it in /partials/post.hbs for consistency --}}
                    <span><i class="fa fa-calendar fa-fw"></i> {{date format='DD MMM YYYY'}}</span>
                </div>  
            </div>    
        </div>
    </div>
</div>
<div id="post" class="container">
    <div class="grid">
        <div class="col-8-12 push-2-12">
            {{content}}

            {{!-- Only load in any tag content, if the post actually has tags --}}
            {{#if tags}}
                <div class="tags-list">
                    Tags: {{tags separator=", "}}
                </div>
            {{/if}}
        
            {{!-- The tag below contains the HTML to allow a post to
            be shared. You can find it under /partials/sharer.hbs --}}            
            {{> "sharer"}} 
        </div>
    </div>
</div>
{{/post}}
