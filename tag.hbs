{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {{{body}}} tag of the default.hbs template --}}

<div id="top_content">
    <div class="container text-center">
        <div class="grid">
            <div class="col-1-2 push-1-4">
                    {{!-- If the tag has a feature_image, show it  --}} 
                    {{#if tag.feature_image}}
                        <img src="{{img_url tag.feature_image}}" class="top-tag-image" alt="{{tag.name}}" />
                    {{/if}}                
                <h1>{{tag.name}}</h1>

                {{!-- If the tag has a description in the
                Ghost Admin, show it. --}}
                {{#if tag.description}}
                    <p>{{tag.description}}</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<div class="container">
    
    {{!-- The tag below contains the HTML for the grid of posts. You can find
    it under /partials/post-grid.hbs --}}               
    {{> "post-grid"}}    

</div>